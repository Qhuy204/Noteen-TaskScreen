<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền gửi thông báo cho Android 13 (API 33) trở lên -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Quyền đặt báo thức chính xác -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Quyền này cần thiết để khởi động lại báo thức sau khi reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- (QUAN TRỌNG) Quyền hiển thị Activity trên màn hình khóa -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Noteen"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Noteen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- (MỚI) Đăng ký Activity hiển thị hộp thoại báo thức -->
        <activity
            android:name=".ui.screen.ReminderActivity"
            android:exported="false"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.Noteen" />

        <!-- Đăng ký BroadcastReceiver để xử lý thông báo -->
        <receiver
            android:name=".utils.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
